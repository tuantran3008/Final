
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_layoutSite.cshtml";
}
<div class="container">
    <div class="row">
       
       
        <div class="col-md-6">
            <div class="format my-4" style="padding-left:400px">
                @Html.Partial("_MessgeAlert")
            </div>
            <form name="form1" action="" method="post">
                <div class="swapper mt-5 p-3">
                    <div class="row">

                        <div class="col-md-12">
                            <div class="login border p-5 shadow">
                                <h4 class="text-center text-orange my-2 text-bold "> ĐĂNG NHẬP</h4>
                                <div class="form-group">
                                    <label>Tên đăng nhập<span class="text-danger ml-1">(*)</span></label>
                                    <input name="uname" type="text" required placeholder="Tên đăng nhập" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Mật khẩu<span class="text-danger ml-1">(*)</span></label>
                                    <input name="psw" type="password" required placeholder="Mật khẩu" class="form-control" />
                                </div>
                                <div class="form-group" style="margin-left:120px">
                                    <button type="submit" class="btn btn-sm bg-orange">Đăng nhập</button>
                                    <a href="~/" class="btn bg-orange text-white" ><i class="fa fa-undo"></i> Quay lại</a>
                                </div>


                            </div>

                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <form name="form2" action="" method="post">
                <div class="swapper mt-5 p-3">
                    <div class="row">

                        <div class="col-md-12">
                            <div class="login border p-4 shadow">
                                <h4 class="text-center text-orange my-2 text-bold">ĐĂNG KÝ TÀI KHOẢN</h4>
                                <div class="form-group">
                                    <p style="text-align:center;font-size:16px;color:#000000">Bạn chưa có tài khoản?</p>
                                </div>
                               
                                <div class="form-group" style="margin-left:80px">
                                    <a href="/dang-ky" class="btn text-white btn-sm bg-orange" ><i class="fa fa-key"></i>Đăng ký tại đây</a>
                                    <a href="~/" class="btn bg-orange text-white" ><i class="fa fa-undo"></i> Quay lại</a>
                                </div>


                            </div>

                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>

</div>


