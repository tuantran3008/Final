@{
    Layout = "~/Views/Shared/_layoutSite.cshtml";
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="row">
        @Html.Partial("_MessgeAlert")
        <form name="form2" action="" method="post">
            <div class="swapper mt-5 p-3">
                <div class="row">

                    <div class="col-md-9" style="margin-left:320px">
                        <div class="login border p-4 shadow">
                            <div class="form-group"style="color:#ff0000;text-align:center">
                                @Html.Raw(ViewBag.Error)
                            </div>
                            <h4 class="text-center text-orange my-2 text-bold">ĐĂNG KÝ TÀI KHOẢN</h4>
                            <div class="form-group">
                                <label>Họ và tên<span class="text-orange ml-1">(*)</span></label>
                                <input name="fname" type="text" required placeholder="Tên đăng nhập hoặc Email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Tên đăng nhập<span class="text-orange ml-1">(*)</span></label>
                                <input name="uname" type="text" required placeholder="Tên đăng nhập hoặc Email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Email<span class="text-orange ml-1">(*)</span></label>
                                <input name="email" type="email" required placeholder="Email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu<span class="text-orange ml-1">(*)</span></label>
                                <input name="psw" type="password" required placeholder="Mật khẩu" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Nhập lại mật khẩu</label>
                                <input name="repsw" type="password" required placeholder="Nhập lại mật khẩu" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Số điện thoại<span class="text-orange ml-1">(*)</span></label>
                                <input name="phone" type="text" required placeholder="Số điện thoại" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ<span class="text-orange ml-1">(*)</span></label>
                                <input name="address" type="text" required placeholder="Địa chỉ sinh sống" class="form-control" />
                            </div>
                            <div class="form-group" style="margin-left:100px">
                                <button type="submit" class="btn text-white bg-orange" ><i class="fa fa-key"></i>Đăng ký</button>
                                <a href="~/" class="btn  text-white bg-orange" ><i class="fa fa-undo"></i> Quay lại</a>
                            </div>


                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

